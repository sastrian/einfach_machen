<h3>Einfach kontaktieren!</h3>

<div class="container-fluid">
<%= simple_form_for @contact, :url => pages_contacted_path, :html => {class: 'form-horizontal' } do |f| %>
<% if @contact.errors.any? %>
    <div id="error_explanation">
      <h3><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h3>

      <ul>
      <% @contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
<% end %>  

  <%=  f.input :nickname, :as => :hidden %>
  <%=  f.input :name, :required => true %>
  <%=  f.input :email, :required => true %>
  <%=  f.input :message, hint: "Nutzen Sie dieses Forumlar bitte lediglich zur Kontaktaufnahme und zur Verabredung eines kostenlosen Erstgesprächs. Haben Sie bitte Verständnis, dass ich keine inhaltenlichen Fragen per Email beantworte.", :required => true, label: "Nachricht", :as => :text, :required => false, :input_html => {:rows => 6} %>   
  <%=  f.button :submit, 'Abschicken', :class=> "btn btn-primary" %>

<% end %>
</div>

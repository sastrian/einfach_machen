<h3>Gespräche</h3>

<% if user_signed_in? %>
	Sie sind als <%= current_user.username %> eingeloggt.
<% else %>
	Sie sind derzeit nicht eingeloggt. <%= link_to("Login", new_user_session_path) %></li>
<% end %>
<br/>
<br/>
<div class="panel panel-success">
  <!-- Default panel contents -->
  <div class="panel-heading"><strong>Forum</strong></div>

  <!-- Table -->
  <table class="table table-hover">
    <thead>
      <tr>        
        <th>Thema</th>
        <th>Diskussionen</th>
        <th>Beiträge</th>        
      </tr>
    </thead>
    <tbody>    	    
    	<% @forums.each do |forum| %>
    		<tr data-link="<%= forum_path(forum) %>" >
        		<td><strong><%= forum.name %></strong><br/><%= forum.description %></td>
        		<td><%= forum.discussions.count %></td>
        		<td></td>        		       
      		</tr>
    	<% end %>    	
    </tbody>
  </table>  
</div>  

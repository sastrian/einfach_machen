<h3>Übersicht</h3>

<% if user_signed_in? %>
	Sie sind als <%= current_user.username %> eingeloggt.
<% else %>
	Sie sind derzeit nicht eingeloggt. <%= link_to("Login", new_user_session_path) %></li>
<% end %>
<br/>
<br/>
<div class="panel panel-success">
  <!-- Default panel contents -->
  <div class="panel-heading"><strong><%= @forum.name %></strong></div>

  <!-- Table -->
  <table class="table table-hover">
    <thead>
      <tr>        
        <th>Diskussion</th>
        <th>Beiträge</th>           
      </tr>
    </thead>
    <tbody>    	    
    	<% @forum.discussions.each do |discussion| %>
    		<tr data-link="<%= discussion_path(discussion) %>" >
        		<td><strong><%= discussion.title %></strong><br/>erstellt durch <%= discussion.user.username %></td>
        		<td><%= (discussion.posts.count + 1) %></td>
        		<td></td>        		       
      		</tr>
    	<% end %>    	
    </tbody>
  </table>  
</div>  
<br/>


<%= link_to 'Neue Diskussion', new_discussion_path(forum_id: @forum.id), :class => "btn btn-xs btn-success", data: { no_turbolink: true } %>


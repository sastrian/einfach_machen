<h3>Anmelden</h3>

<%= simple_form_for(resource, as: resource_name, :html => {class: 'form-horizontal' }, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true %>
    <%= f.input :password, label: "Passwort", required: false %>
    <%= f.input :remember_me, label: "Anmeldung erinnern", as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Anmelden", :class => "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

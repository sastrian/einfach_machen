<h3>Neu registrieren</h3>

<%= simple_form_for(resource, as: resource_name, :html => {class: 'form-horizontal' }, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true %>
    <%= f.input :username, label: "Usernamen", required: true %>
    <%= f.input :password, label: "Passwort", required: true %>
    <%= f.input :password_confirmation,  label: "Passwort wiederholen", required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Registrieren", :class => "btn btn-primary" %>
  </div>
<% end %>
<br />
<%= render "devise/shared/links" %>

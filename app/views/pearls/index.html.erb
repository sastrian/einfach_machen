<h1>Listing pearls</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Body</th>
      <th>Title</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pearls.each do |pearl| %>
      <tr>
        <td><%= pearl.user %></td>
        <td><%= pearl.body %></td>
        <td><%= pearl.title %></td>
        <td><%= image_tag @pearl.image_url(:thumb).to_s if @pearl.image_url.present?, class => "img-responsive col-md-2" %></td>
        <td><%= link_to 'Show', pearl %></td>
        <td><%= link_to 'Edit', edit_pearl_path(pearl) %></td>
        <td><%= link_to 'Destroy', pearl, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


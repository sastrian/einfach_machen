<h3><%= @pearl.title %></h3>
von <%= @pearl.user.username %> ( <%= @pearl.impressionist_count %> Mal gesehen) 
<br/>
<br/>

<div class="container-fluid">	
	<% if @pearl.image_url.present? %>			
    	<%= image_tag(@pearl.image_url, :class => "img-responsive") %>
    <% end %>	        	        
    <br />
    <%= @pearl.body %>    
</div>
<br/>
<%= link_to 'zurück', weekly_pearls_path(), :class => "btn btn-info btn-xs col-md-2" %>
<br/>
<br/>
<br/>
<% if (user_signed_in? && (current_user.id == @pearl.user_id)) %>			
	<div class="btn-toolbar">		
		<%= link_to 'Ändern', edit_pearl_path(@pearl), :class => "btn btn-warning btn-xs col-md-2" %> 
		<%= button_to 'Löschen', @pearl, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-xs col-md-2" %>
	</div>
	<br/>
<br/>
<br/>
<% end %>

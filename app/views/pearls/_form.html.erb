<%= simple_form_for(@pearl) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :user %>
    <%= f.input :body %>
    <%= f.input :title %>    
    <%= f.input :image, as: :image_preview, input_html: {preview_version: :thumb} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

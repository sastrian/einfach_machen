<%= tinymce %>

<%= simple_form_for(@pearl) do |f| %>
<div class="form-inputs">
	<%= f.input :title, :required => true, label: "Titel" %>

	<%= f.label :body, 'Gedanken', :required => true %>
	<%= f.text_area :body, class: "tinymce", :rows => 25, :cols => 120 %>

	<br />

	<%= f.input :image, label: "Bild" %>

	<% if @pearl.image_url.present? %>
	Remove Image
	<%= f.check_box :remove_image %>
	<%= image_tag(@pearl.image_url(:thumb)) if @pearl.image? %>
	<% end %>
</div>

<br />
<div class="form-actions">
	<%= f.button :submit, :class => "btn btn-primary btn-sm"  %>
</div>

<% end %>